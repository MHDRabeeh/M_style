<%- include('../partials/admin-navbar') %>

<div class="container py-5 mt-5">
  <div class="jumbotron shadow m-2 bg-white rounded">
    <table id="admin" class="table table-striped table-bordered table-hover" style="width:100%">
      <thead>
        <tr>
          <th>#id</th>
          <th>Name</th>
          <th>Email</th>
          <th>Status</th>
          <th>Change status</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach((user,index)=> { %>
        <tr>
          <td>
            <%= index+1 %>
          </td>
          <td>
            <%= user.name %>
          </td>
          <td>
            <%= user.email %>
          </td>
          <% if (user.isActive){ %>
          <td style="color:green;">Active</td>

          <% }else {%>
          <td style="color:red;">Blocked</td>
          <% } %>
          <td class>
            <% if(user.isActive){ %>

            <form action="/admin/blockuser/<%= user.id %>" method="post">
              <button type="button" data-bs-target="#modalBlock<%= user.id %>" data-bs-toggle="modal" class="btn btn-danger">Block</button>
              <!-- block modal start -->
              <div class="modal modal-alert" tabindex="-1" role="dialog" id="modalBlock<%= user.id %>">
                <div class="modal-dialog modal-dialog-centered" role="document">
                  <div class="modal-content rounded-3 shadow">
                    <div class="modal-body p-4 text-center">
                      <h5 class="mb-2">Waring!</h5>
                      <p class="mb-0">Are you Block this Accound</p>
                    </div>
                    <div class="modal-footer flex-nowrap p-0">
                      <button type="submit" class="btn btn-lg btn-link fs-6 text-decoration-none col-6 m-0 rounded-0 border-end"><strong>Yes</strong></button>
                      <button type="button" class="btn btn-lg btn-link fs-6 text-decoration-none col-6 m-0 rounded-0" data-bs-dismiss="modal">No</button>
            </form>

 

<!-- block modal end -->

<% } else { %>
<form action="/admin/activeUser/<%= user.id %>" method="post">
  <button type="button" data-bs-target="#modalBlock<%= user.id %>" data-bs-toggle="modal" class="btn btn-outline-success">Active</button>
  <!-- block modal start -->
  <div class="modal modal-alert" tabindex="-1" role="dialog" id="modalBlock<%= user.id %>">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content rounded-3 shadow">
        <div class="modal-body p-4 text-center">
          <h5 class="mb-2">Waring !</h5>
          <p class="mb-0">Are you Activate this Accound ?</p>
        </div>
        <div class="modal-footer flex-nowrap p-0">
          <button type="submit" class="btn btn-lg btn-link fs-6 text-decoration-none col-6 m-0 rounded-0 border-end"><strong>Yes</strong></button>
          <button type="button" class="btn btn-lg btn-link fs-6 text-decoration-none col-6 m-0 rounded-0" data-bs-dismiss="modal">No</button>
        </div>
      </div>
    </div>
  </div>
  <!-- block modal end -->
</form>
<% } %>
</td>
</tr>
<% }) %>
    


      




<script>
  $(document).ready(function() {
    $('#admin').DataTable();
  });
</script>