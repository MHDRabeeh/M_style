<%- include('../partials/admin-navbar') %>


<div class="container py-5 mt-5">
  <!-- <a class="btn btn-outline-primary mb-2 mt-3 ml-4" onclick="exportCsv()">Sales Report</a> -->

  <div id="mydiv" class="jumbotron shadow m-2 bg-white rounded">
    
    <table
      id="datatablesSimple"
      class="table table-striped table-bordered table-hover"
      style="width: 100%"
    >
      <thead>
        <tr>
          <th>orderId</th>
          <th>User</th>
          <th>Address</th>
          <th>Products</th>
          <th>Total Price</th>
          <th>Order Date</th>
          <th>Payment</th>
          <th>Status</th>
          <th>Action</th>
        </tr>
      </thead>
      <%allorders.forEach((orders)=>{%>
      <tbody>
        <tr>
          
          

          
          <td><a href="/admin/orders/<%= orders.id %>" class="link-dark"><%=orders.id%></a></td>
            <td><%= orders.userId.email %> </td>
            <td>
                <%=orders.deliveryAddress.firstName  %>
                <%=orders.deliveryAddress.lastName%>,
                <%=orders.deliveryAddress.address%>
                <%=orders.deliveryAddress.postCode%>,
                <%=orders.deliveryAddress.district%>,
                <%=orders.deliveryAddress.state%>
             </td>
             <td>
                <% orders.products.forEach((data)=>{%>
                    <%=data.name%> x <%= data.quantity %> 
                    <% }) %> 

             </td>
            
            <td><%= orders.total %>  </td>
            <td><%= orders.createdAt%> </td>
            <% if(orders.paymentType=="COD"){%>
              <td><span class="badge" style="background-color:rgb(177, 39, 85) ;">COD</span></td>

           <% }else{%>
            <td><span class="badge" style="background-color:rgb(25, 152, 86) ;">Online</span></td>
           <%} %> 

           <td>
              <%=orders.status%> 
            </td>
            <td>
              <% if(orders.status == "Pending"){ %> 
              <div   class="btn-group" role="group" aria-label="Basic example">
                <button class="btn btn-sm btn-outline-dark"  onclick="packOrder('<%=orders.id%>')" ><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-seam" viewBox="0 0 16 16">
