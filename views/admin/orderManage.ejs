          }
          let dataTable = new simpleDatatables.DataTable("#datatablesSimple")
        
          let date = new Date().toLocaleDateString('en-US', {
            year: 'numeric',
            month: '2-digit',
            day: '2-digit',
          })
          function exportCsv() {
            dataTable.export({
              type: "csv",
              skipColumn: [0, 13, 14],
              filename: "order_report" + " " + date
            });
          }
        </script>

      
      </tbody>
    </table>
  </div>
</div>
